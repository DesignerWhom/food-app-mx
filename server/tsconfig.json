{
  "compilerOptions": {
    /* Configuración de Módulos */
    "target": "es2016",
    "module": "commonjs",             
    "moduleResolution": "node",
    "esModuleInterop": true,
    
    /* Carpetas */
    "rootDir": "./src",
    "outDir": "./dist",
    
    /* Estrictas pero funcionales */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}